{% from '@SyliusAdmin/Macro/translationForm.html.twig' import translationFormWithSlug %}

<div class="ui stackable grid">
    {{ form_errors(form) }}
    <div class="eight wide column">
        <div class="ui segment">
            <h4 class="ui dividing header">{{ 'sylius.ui.configuration'|trans }}</h4>
            <div class="field">
                {{ form_row(form.code) }}
            </div>
            <div class="field">
                {{ form_row(form.position) }}
            </div>
            <div class="field">
                {{ form_row(form.channels) }}
            </div>
            <div class="field">
                {{ form_row(form.enabled) }}
            </div>
        </div>
    </div>
    <div class="eight wide column">
        <div class="ui segment">
            <h4 class="ui dividing header">{{ 'setono_sylius_terms.form.terms.display_place'|trans }}</h4>
            {{ form_row(form.displayInFooter) }}
            {{ form_row(form.displayInCheckout) }}
            {{ form_row(form.displayInCustomerSignup) }}
        </div>
    </div>
</div>

<div class="ui segment">
    <h4 class="ui dividing header">{{ 'sylius.ui.translatable'|trans }}</h4>
    {# @todo Own slug generator? #}
    {{ translationFormWithSlug(form.translations, '@SyliusAdmin/Product/_slugField.html.twig', terms) }}
</div>
